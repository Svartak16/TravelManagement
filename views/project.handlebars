<script>
  document.getElementById('bookingType').addEventListener('change', function() {
    const bookingType = this.value;
    const companyNameSelect = document.getElementById('companyName');
    let optionsHTML = '<option value="">Select Company</option>';

    // Clear the current options
    companyNameSelect.innerHTML = '';

    if (bookingType === 'hotel') {
      // Add hotel options dynamically
      const hotels = ['Bliss Inn', 'Vista Hotel', 'Reef Lodge']; // Replace with actual hotel data from DB or array
      hotels.forEach(hotel => {
        optionsHTML += `<option value="${hotel}">${hotel}</option>`;
      });
    } else if (bookingType === 'flight') {
      // Add flight options dynamically
      const flights = ['Air India', 'Indigo', 'Spicejet']; // Replace with actual flight data from DB or array
      flights.forEach(flight => {
        optionsHTML += `<option value="${flight}">${flight}</option>`;
      });
    }

    // Insert options into the companyName dropdown
    companyNameSelect.innerHTML = optionsHTML;
  });
</script>
<script>
   // Get all the Book Now buttons and location names
const buttons = document.querySelectorAll(".book-now-btn");
const locNames = document.querySelectorAll(".loc-name");

buttons.forEach((button, index) => {
  button.addEventListener("click", function() {
    // Get the location name for the corresponding button
    const locationName = locNames[index].childNodes[1].nodeValue.trim();
    
    // Set the value of the destination input field
    document.getElementById("destination").value = locationName;
    
    // Scroll to the booking form
    document.getElementById("destination").scrollIntoView({ behavior: 'smooth' });
  });
});

</script>

       

